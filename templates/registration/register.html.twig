<!DOCTYPE html>
<html lang="en">
	<head>
		<!-- Required meta tags -->
		<meta charset="utf-8">
		<meta
		name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<!-- plugins:css -->
		<link rel="stylesheet" href="{{asset('back/assets/vendors/mdi/css/materialdesignicons.min.css')}}">
		<link rel="stylesheet" href="{{asset('back/assets/vendors/css/vendor.bundle.base.css')}}">
		<!-- endinject -->
		<!-- Plugin css for this page -->
		<!-- End plugin css for this page -->
		<!-- inject:css -->
		<!-- endinject -->
		<!-- Layout styles -->
	<link
		rel="stylesheet" href="{{asset('back/assets/css/style.css')}}"> <!-- End layout styles -->

	</head>
	<body>
		<div class="container-scroller">
			<div class="container-fluid page-body-wrapper full-page-wrapper">
				<div class="content-wrapper d-flex align-items-center auth">
					<div class="row flex-grow">
						<div class="col-lg-4 mx-auto">
							<div class="auth-form-light text-left p-5">
								<div class="brand-logo">
									<img src="{{asset('back//assets/images/logo.svg')}}">
								</div>
								{% for flashError in app.flashes('verify_email_error') %}
									<div class="alert alert-danger" role="alert">{{ flashError }}</div>
								{% endfor %}
								<h4>New here?</h4>
								<h6 class="font-weight-light">Signing up is easy. It only takes a few steps</h6>


								{{ form_start(registrationForm) }}

								<div class="form-group">
									<label class="col-sm-3 col-form-label">Nom</label>
									{{ form_widget(registrationForm.nom , {'attr': {'placeholder' : 'Nom'}}) }}
								</div>
								<div class="form-group">
									<label class="col-sm-3 col-form-label">Prénom</label>
									{{ form_widget(registrationForm.prenom , {'attr': {'placeholder' : 'Prénom'}}) }}
								</div>
								<div class="form-group">
									<label class="col-sm-3 col-form-label">Cin</label>
									{{ form_widget(registrationForm.cin , {'attr': {'placeholder' : 'Cin'}}) }}
								</div>
								<div class="form-group">
									<label class="col-sm-3 col-form-label">Tel</label>
									{{ form_widget(registrationForm.tel , {'attr': {'placeholder' : 'Tel'}}) }}
								</div>
								<div class="form-group">
									<label class="col-sm-3 col-form-label">Département</label>
									{{ form_widget(registrationForm.departement , {'attr': { 'placeholder' : 'Département'}}) }}
								</div>
								<div class="form-group">
									<label class="col-sm-3 col-form-label">Adresse</label>
									{{ form_widget(registrationForm.adresse , {'attr': {'placeholder' : 'Adresse'}}) }}
								</div>
								<div class="form-group">
									<label class="col-sm-3 col-form-label">Age</label>
									{{ form_widget(registrationForm.age , {'attr': {'placeholder' : 'Age'}}) }}
								</div>
								<div class="form-group">
									<label class="col-sm-3 col-form-label">Email</label>
									{{ form_widget(registrationForm.email , {'attr': {'placeholder' : 'Email'}}) }}
								</div>
								<div class="form-group row">
									<label for="exampleInputUsername2" class="col-sm-3 col-form-label">Image</label>
									<div class="col-sm-9">
										{{ form_widget(registrationForm.image , {'attr': { 'placeholder' : 'Image'}}
										) }}
										{{ form_errors(registrationForm.image) }}
									</div>
								</div>
								<div class="form-group">

									{{ form_widget(registrationForm.captcha , {'attr': {'placeholder' : 'Ecrire le Code'}}) }}
								</div>
								<div class="form-group">
									<label class="col-sm-3 col-form-label">Password</label>
									{{ form_widget(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
								</div>
								<div class="mb-4">
									<div class="form-check">
										<label class="form-check-label text-muted">
											<input type="checkbox" class="form-check-input">
											I agree to all Terms & Conditions
										</label>
									</div>
								</div>
								<div class="mt-3">
									<button class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" type="submit">SIGN UP</button>
								</div>
								<div class="text-center mt-4 font-weight-light">
									Already have an account?
									<a href="{{ url('app_login') }}" class="text-primary">Login</a>
								</div>
								{{ form_end(registrationForm) }}

							</div>
						</div>
					</div>
				</div>
				<!-- content-wrapper ends -->
			</div>
			<!-- page-body-wrapper ends -->
		</div>
		<!-- container-scroller -->
		<!-- plugins:js -->
		<script src="{{asset('back/assets/vendors/js/vendor.bundle.base.js')}}"></script>
		<!-- endinject -->
		<!-- Plugin js for this page -->
		<!-- End plugin js for this page -->
		<!-- inject:js --><script src="../../assets/js/off-canvas.js')}}"> </script>
		<script src="{{asset('back/assets/js/hoverable-collapse.js')}}"></script>
		<script src="{{asset('back/assets/js/misc.js')}}"></script>
		<!-- endinject -->
	</body>
</html>
